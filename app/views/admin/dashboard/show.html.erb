<section class="admin-dashboard">

  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">There are currently <%= @product_count %> different products available.</p>
          <%= link_to "Go to Products","/admin/products", :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">There are currently <%= @category_count %> different categories created.</p>
          <%= link_to "View all Products","/products", :class => "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>

</section>